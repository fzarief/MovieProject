    <div id="app">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(movie, index) in filteredMovies" :key="movie.id">
                    <td>{{ movie.title }}</td>
                    <td>{{ movie.price }}</td>
                    <td>
                        <button v-on:click="removeMovie(movie)">X</button>
                        <button v-on:click="getMovieById(movie.id)">Edit</button>
                        <button v-on:click="deleteMovie(movie.id)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <br>
        <form v-on:submit.prevent="addMovie">
            <input type="text" v-model="movie.title" placeholder="Enter movie name">
            <input type="text" v-model="movie.price" placeholder="Enter movie price">
            <button v-if="!isEdit" v-on:click="insertMovie">Add</button>
            
        </form>
        <div>
            <button v-if="isEdit" v-on:click="updateMovie">Update</button>
            <button v-if="isEdit" v-onclick="clearData">Cancel</button>
        </div>
        <ul>
            <li v-for="movie in filteredMovies" :key="movie.id">
                <input type="checkbox" v-model="movie.done">
                <span :class="{ done: movie.done }">{{ movie.title }}, {{ movie.price }}</span>
                <button v-on:click="deleteMovie(movie.id)">X</button>
            </li>
        </ul>
        <br>
        <button v-on:click="hideCompleted = !hideCompleted">
            {{ hideCompleted ? 'Show all' : 'Hide completed' }}
        </button>
    </div>

</body>
    
           
